<script>

	var idleTime = 0;
    $(document).ready(function() {
        var idleInterval = setInterval(timerIncrement, 30000);
        //1000 =  1초
        
        if(element.requestFullScreen) {
            element.requestFullScreen();
        } else if(element.webkitRequestFullScreen ) {
            element.webkitRequestFullScreen();
        } else if(element.mozRequestFullScreen) {
            element.mozRequestFullScreen();
        } else if (element.msRequestFullscreen) {
            element.msRequestFullscreen(); // IE
        }
    });
    $(function() {
       	$('#refresh_btn').on('click', function() {
       		readCvdWait();
       		readCvcWait();
       		readCvbWait();
       	});
   });
    function refreshNum(){
    	readCvdWait();
   		readCvcWait();
   		readCvbWait();   	
    }
    function timerIncrement(){
    	var timeLimit = 5;	
    	idleTime = idleTime + 1;
    	console.log(idleTime);
    	if (idleTime > timeLimit ) { // 5 minutes
    		refreshNum();		
    	}
    }    
	function readCvbWait(){
	//console.log("==readCvbWait works ==");
         $.ajax({
      		url:'/readCvibWaitGroupSetJSON.do',
      		type: 'POST',
      		dataType: 'json',
      		cache: false,
      		async: true,
      		success: function(resp) {
      		//	console.log("==resp readCvdWait ==");
      		//	console.log(resp);
      		//	console.log("==resp ==");
		if(resp.groupList.length == 1) {
			$('#cvid_seq_update3_today').text(resp.today);
			$('#cvid_seq_update3_time').text(resp.thisTime);
			$('#cvid_seq_3_waitNo').text(resp.groupList[0].waitNo);
			$('#cvid_seq_3_lastCallNo').text(resp.groupList[0].lastCallNo);
		}
      		}
      	});      			
	}
	function readCvcWait(){
	//console.log("==readCvdWait works ==");
         $.ajax({
      		url:'/readCvicWaitGroupSetJSON.do',
      		type: 'POST',
      		dataType: 'json',
      		cache: false,
      		async: true,
      		success: function(resp) {
      		//	console.log("==resp readCvdWait ==");
      		//	console.log(resp);
      		//	console.log("==resp ==");
		if(resp.groupList.length == 1) {
			$('#cvid_seq_update2_today').text(resp.today);
			$('#cvid_seq_update2_time').text(resp.thisTime);
			$('#cvid_seq_2_waitNo').text(resp.groupList[0].waitNo);
			$('#cvid_seq_2_lastCallNo').text(resp.groupList[0].lastCallNo);
		}
      		}
      	});      			
	}
	function readCvdWait(){
	//console.log("==readCvdWait works ==");
         $.ajax({
      		url:'/readCvidWaitGroupSetJSON.do',
      		type: 'POST',
      		dataType: 'json',
      		cache: false,
      		async: true,
      		success: function(resp) {
      		//	console.log("==resp readCvdWait ==");
      		//	console.log(resp);
      		//	console.log("==resp ==");
		if(resp.groupList.length == 1) {
			$('#cvid_seq_update1_today').text(resp.today);
			$('#cvid_seq_update1_time').text(resp.thisTime);
			$('#cvid_seq_1_waitNo').text(resp.groupList[0].waitNo);
			$('#cvid_seq_1_lastCallNo').text(resp.groupList[0].lastCallNo);
			
		}
      		}
      	});      			
	}    		
	readCvdWait();
    readCvcWait();
    readCvbWait();
</script>         
